"use client";

import React from 'react';
import { useSession } from 'next-auth/react';
import { useRouter } from 'next/navigation';

/**
 * Authentication guard component for EdPsych Connect
 * Protects routes that require authentication
 */

interface AuthGuardProps {
  children: React.ReactNode;
  redirectTo?: string;
}

const AuthGuard = ({ 
  children, 
  redirectTo = '/auth/login' 
}: AuthGuardProps) => {
  const { data: session, status } = useSession();
  const router = useRouter();
  const [isAuthenticated, setIsAuthenticated] = React.useState(false);
  
  React.useEffect(() => {
    // Still loading session
    if (status === 'loading') {
      return;
    }
    
    // No session, redirect to login
    if (!session) {
      router.push(`${redirectTo}?callbackUrl=${encodeURIComponent(pathname)}`);
      return;
    }
    
    // User is authenticated
    setIsAuthenticated(true);
  }, [session, status, router, redirectTo]);
  
  // Show loading state whilst checking authentication
  if (status === 'loading' || !isAuthenticated) {
    return (
      <div className="min-h-screen flex items-centre justify-centre">
        <div className="text-centre">
          <div className="w-16 h-16 border-4 border-primary border-t-transparent rounded-full animate-spin mx-auto"></div>
          <p className="mt-4 text-grey-600 dark:text-grey-400">Checking authentication...</p>
        </div>
      </div>
    );
  }
  
  // User is authenticated, render children
  return <>{children}</>;
};

export default AuthGuard;
