'use client';

import React, { useState } from 'react';
import { EnhancedHeader, EnhancedFooter } from '@/components/layout/enhanced-header-footer';
import { Container, Typography, Card, Grid } from '@/components/ui/enhanced-layout-components';
import { Button } from '@/components/ui/enhanced-form-components';
import { Tabs, TabsContent, TabsList, TabsTrigger } from '@/components/ui/enhanced-interactive-components';
import { Accordion, AccordionItem } from '@/components/ui/enhanced-interactive-components';
// Create simple versions of missing components
const Progress = ({ value, max, className }) => (
  <div className={`bg-grey-200 rounded-full ${className}`}>
    <div
      className="bg-blue-600 rounded-full h-full"
      style={{ width: `${(value / max) * 100}%` }}
    ></div>
  </div>
);

const AccordionTrigger = ({ className, children }) => (
  <div className={className}>
    {children}
  </div>
);

const AccordionContent = ({ children }) => (
  <div className="accordion-content">
    {children}
  </div>
);
import { Badge } from '@/components/ui/enhanced-form-components';
import Link from 'next/link';
import Image from 'next/image';

export default function InclusiveEducationCoursePage() {
  const [activeTab, setActiveTab] = useState('overview');
  
  // Mock data for course modules
  const courseModules = [
    {
      id: 1,
      title: "Foundations of Inclusive Education",
      description: "Understanding the research, principles, and frameworks that underpin effective inclusive practise.",
      duration: "2 hours",
      lessons: [
        { title: "Introduction to Inclusive Education", duration: "20 min", type: "Video Lecture" },
        { title: "Historical Context and Development", duration: "15 min", type: "Reading" },
        { title: "Research Evidence and Impact", duration: "25 min", type: "Video Lecture" },
        { title: "Legal Framework in the UK", duration: "20 min", type: "Interactive Tutorial" },
        { title: "Inclusive Education Principles", duration: "25 min", type: "Video Lecture" },
        { title: "Knowledge Check", duration: "15 min", type: "Quiz" }
      ],
      resources: [
        "Inclusive Education Framework Guide",
        "UK Legal Requirements Summary",
        "Research Evidence Infographic",
        "Inclusion Self-Assessment Tool"
      ],
      completion: 0
    },
    {
      id: 2,
      title: "Universal Design for Learning",
      description: "Implementing UDL principles to create learning environments that provide multiple means of engagement, representation, and action.",
      duration: "2.5 hours",
      lessons: [
        { title: "Introduction to UDL", duration: "20 min", type: "Video Lecture" },
        { title: "Multiple Means of Engagement", duration: "30 min", type: "Interactive Tutorial" },
        { title: "Multiple Means of Representation", duration: "30 min", type: "Interactive Tutorial" },
        { title: "Multiple Means of Action & Expression", duration: "30 min", type: "Interactive Tutorial" },
        { title: "UDL Planning Process", duration: "25 min", type: "Video Lecture" },
        { title: "Knowledge Check", duration: "15 min", type: "Quiz" }
      ],
      resources: [
        "UDL Guidelines Checklist",
        "Lesson Planning Template with UDL Framework",
        "UDL Strategy Bank",
        "Digital Tools for UDL Implementation"
      ],
      completion: 0
    },
    {
      id: 3,
      title: "Differentiation in Practise",
      description: "Practical approaches to differentiating content, process, and product based on student readiness, interest, and learning profile.",
      duration: "2 hours",
      lessons: [
        { title: "Principles of Effective Differentiation", duration: "20 min", type: "Video Lecture" },
        { title: "Content Differentiation", duration: "25 min", type: "Interactive Tutorial" },
        { title: "Process Differentiation", duration: "25 min", type: "Interactive Tutorial" },
        { title: "Product Differentiation", duration: "25 min", type: "Interactive Tutorial" },
        { title: "Managing the Differentiated Classroom", duration: "15 min", type: "Video Lecture" },
        { title: "Knowledge Check", duration: "10 min", type: "Quiz" }
      ],
      resources: [
        "Differentiation Strategy Guide",
        "Tiered Assignment Templates",
        "Flexible Grouping Strategies",
        "Differentiated Assessment Options"
      ],
      completion: 0
    },
    {
      id: 4,
      title: "Creating Inclusive Cultures",
      description: "Building classroom and school environments that foster belonging, positive relationships, and celebrate diversity.",
      duration: "1.5 hours",
      lessons: [
        { title: "Elements of Inclusive Culture", duration: "20 min", type: "Video Lecture" },
        { title: "Building Belonging and Community", duration: "20 min", type: "Interactive Tutorial" },
        { title: "Celebrating Diversity", duration: "15 min", type: "Video Lecture" },
        { title: "Addressing Bias and Stereotypes", duration: "20 min", type: "Interactive Tutorial" },
        { title: "Student Voice and Agency", duration: "15 min", type: "Video Lecture" },
        { title: "Knowledge Check", duration: "10 min", type: "Quiz" }
      ],
      resources: [
        "Inclusive Language Guide",
        "Community Building Activity Pack",
        "Diversity Calendar and Celebration Ideas",
        "Student Voice Framework"
      ],
      completion: 0
    },
    {
      id: 5,
      title: "Collaborative Inclusion",
      description: "Working effectively with teaching assistants, specialists, and other professionals to support inclusive practise.",
      duration: "2 hours",
      lessons: [
        { title: "Collaborative Team Approaches", duration: "20 min", type: "Video Lecture" },
        { title: "Working with Teaching Assistants", duration: "25 min", type: "Interactive Tutorial" },
        { title: "Collaborating with Specialists", duration: "25 min", type: "Interactive Tutorial" },
        { title: "Parent and Carer Partnerships", duration: "20 min", type: "Video Lecture" },
        { title: "Effective Communication Strategies", duration: "20 min", type: "Interactive Tutorial" },
        { title: "Knowledge Check", duration: "10 min", type: "Quiz" }
      ],
      resources: [
        "Collaborative Planning Templates",
        "TA Deployment Guide",
        "Specialist Collaboration Checklist",
        "Parent Partnership Framework"
      ],
      completion: 0
    },
    {
      id: 6,
      title: "Measuring Impact",
      description: "Evaluating and improving inclusive practices through data collection, reflection, and continuous improvement.",
      duration: "2 hours",
      lessons: [
        { title: "Inclusive Practise Indicators", duration: "20 min", type: "Video Lecture" },
        { title: "Gathering Meaningful Data", duration: "25 min", type: "Interactive Tutorial" },
        { title: "Student Progress Monitoring", duration: "25 min", type: "Interactive Tutorial" },
        { title: "Reflective Practise", duration: "20 min", type: "Video Lecture" },
        { title: "Action Research for Inclusion", duration: "20 min", type: "Interactive Tutorial" },
        { title: "Final Assessment", duration: "30 min", type: "Assessment" }
      ],
      resources: [
        "Inclusion Impact Measurement Toolkit",
        "Progress Monitoring Templates",
        "Reflective Practise Journal",
        "Action Research Guide for Inclusion"
      ],
      completion: 0
    }
  ];

  // Mock data for course instructors
  const instructors = [
    {
      name: "Dr. Emma Johnson",
      title: "Lead Educational Psychologist",
      bio: "Dr. Johnson specializes in inclusive education practices with over 15 years of experience supporting schools to develop effective inclusion strategies. She holds a Doctorate in Educational Psychology and has published extensively on Universal Design for Learning.",
      image: "/images/professional-development/instructors/emma-johnson.jpg"
    },
    {
      name: "Michael Williams",
      title: "Inclusion Specialist",
      bio: "Michael is an experienced SENCO and inclusion specialist who has led award-winning inclusive practise in schools across the UK. He brings practical classroom experience and strategic leadership to the course content.",
      image: "/images/professional-development/instructors/michael-williams.jpg"
    }
  ];

  // Mock data for testimonials
  const testimonials = [
    {
      quote: "This course transformed my teaching practise. The UDL framework has given me practical tools to ensure all students can access learning in my classroom.",
      author: "Sarah P., Year 4 Teacher",
      school: "Oakwood Primary School"
    },
    {
      quote: "The balance of theory and practical strategies made this course immediately applicable to my classroom. I've seen significant improvements in engagement from my previously disengaged students.",
      author: "James T., Secondary Science Teacher",
      school: "Westfield Academy"
    },
    {
      quote: "As a SENCO, this course has provided valuable resources that I've shared with my whole staff. It's helped create a more consistent approach to inclusion across our school.",
      author: "Rebecca M., SENCO",
      school: "Hillside School"
    }
  ];

