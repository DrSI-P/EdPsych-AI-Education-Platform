    <div className="min-h-screen flex flex-col">
      <EnhancedHeader />
      
      <main className="flex-grow">
        {/* Hero Section */}
        <div className="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-16">
          <Container>
            <div className="flex flex-col md:flex-row gap-8 items-centre">
              <div className="md:w-2/3">
                <Badge className="bg-white text-blue-600 mb-4">Professional Development Course</Badge>
                <Typography variant="h1" className="mb-4">
                  Inclusive Education: Creating Learning Environments for All
                </Typography>
                <Typography variant="lead" className="mb-6">
                  A comprehensive course exploring evidence-based approaches to creating truly inclusive learning environments that support all students.
                </Typography>
