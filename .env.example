# Railway PostgreSQL Connection
DATABASE_URL="postgresql://postgres:password@hostname:port/database"

# NextAuth Configuration
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=generate-a-secure-secret-here

# Application Settings
NEXT_PUBLIC_DEFAULT_TENANT_ID=default
NODE_ENV=production

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_SUPABASE=true
SKIP_DB_OPERATIONS=false

# Optional: Avatar Configuration
HEYGEN_API_KEY=your-heygen-key
NEXT_PUBLIC_HEYGEN_API_KEY=your-heygen-key
NEXT_PUBLIC_AVATAR_ENABLED=false
