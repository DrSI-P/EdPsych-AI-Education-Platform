model ReflectionPrompt {
  id                String   @id @default(cuid())
  title             String
  ageGroup          String
  category          String
  prompts           String[]
  guidanceNotes     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
