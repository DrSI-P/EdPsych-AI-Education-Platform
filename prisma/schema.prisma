  module      RestorativeTrainingModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
}

model RestorativeTrainingProgress {
  id                String   @id @default(cuid())
  userId            String
  moduleId          String
  completedSections String[]
  startedAt         DateTime @default(now())
  lastAccessedAt    DateTime @default(now())
  completedAt       DateTime?
  certificateIssued Boolean  @default(false)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  module            RestorativeTrainingModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  quizAttempts      RestorativeTrainingQuizAttempt[]

  @@unique([userId, moduleId])
}

model RestorativeTrainingQuizAttempt {
  id          String   @id @default(cuid())
  progressId  String
  quizId      String
  score       Int
  attemptedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  progress    RestorativeTrainingProgress @relation(fields: [progressId], references: [id], onDelete: Cascade)
}

model RestorativeTrainingResource {
  id          String   @id @default(cuid())
  moduleId    String
  title       String
  type        String   // pdf, video, link, template
  url         String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  module      RestorativeTrainingModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
}

// Teaching Resources Model
model TeachingResource {
  id                String   @id @default(cuid())
  title             String
  description       String   @db.Text
  subject           String
  keyStage          String
  type              String
  tags              String[]
  isPublic          Boolean  @default(true)
  allowDownload     Boolean  @default(true)
  requireAttribution Boolean @default(false)
  authorId          String
  files             Json     // Array of file URLs
  thumbnail         String?
  downloads         Int      @default(0)
  rating            Float?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  author            User     @relation(fields: [authorId], references: [id])
}

